{
  "name": "notagency.ru",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "yarn env:dev tsx watch src/server.ts",
    "serve": "yarn env:prod node dist/server.mjs",
    "pm2:start": "yarn env:prod pm2 start pm2.config.json",
    "build": "rimraf dist && yarn build:client && yarn build:ssr && yarn build:server",
    "build:client": "yarn env:prod vite build --outDir dist/client --ssrManifest",
    "build:ssr": "yarn env:prod vite build --outDir dist/server --ssr src/entry-server.ts",
    "build:server": "yarn env:prod node scripts/esbuild.mjs",
    "env:dev": "cross-env NODE_ENV=development",
    "env:prod": "cross-env NODE_ENV=production",
    "lint": "yarn lint:scripts && yarn lint:styles",
    "lint:fix": "yarn lint:scripts:fix && yarn lint:styles:fix",
    "lint:scripts": "eslint --ext js,ts,vue src",
    "lint:scripts:fix": "yarn lint:scripts --fix",
    "lint:styles": "stylelint \"src/**/*.{scss,vue}\"",
    "lint:styles:fix": "yarn lint:styles --fix"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cross-env": "^6.0.3",
    "express": "^4.17.1",
    "html-minifier": "^4.0.0",
    "process": "^0.11.10",
    "regenerator-runtime": "^0.13.11",
    "serve-static": "^1.15.0",
    "tsx": "^3.12.7",
    "vue": "^3.3.4",
    "vue-facing-decorator": "^2.1.20",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.2.1",
    "vue-server-renderer": "^2.7.14"
  },
  "devDependencies": {
    "@esbuild-plugins/node-resolve": "^0.2.2",
    "@vitejs/plugin-vue": "^4.2.3",
    "autoprefixer": "^9.7.3",
    "esbuild": "^0.17.19",
    "esbuild-plugin-alias-path": "^2.0.2",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "postcss": "^8.4.21",
    "rimraf": "^3.0.1",
    "sass": "^1.55.0",
    "typescript": "^4.7.3",
    "util": "^0.12.5",
    "vite": "^4.4.12",
    "vite-tsconfig-paths": "^4.2.0"
  },
  "optionalDependencies": {
    "@rushstack/eslint-patch": "^1.3.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/html-minifier": "^4.0.0",
    "@types/mime": "^2.0.3",
    "@types/node": "^14.14.22",
    "@types/serve-favicon": "^2.5.2",
    "@vue/compiler-sfc": "^3.3.4",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "chokidar": "^3.4.0",
    "cors": "^2.8.5",
    "eslint": "^8.19.0",
    "eslint-plugin-vue": "^9.1.1",
    "http-server": "^14.1.1",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.2.0",
    "vue-eslint-parser": "^9.3.0"
  },
  "lint-staged": {
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.{js,ts,vue}": [
      "eslint --fix --ignore-path .gitignore --ignore-path .prettierignore",
      "stylelint --fix",
      "prettier --write"
    ]
  }
}
